<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_item"
    android:layout_width="360dp"
    android:layout_height="69dp"
    android:layout_alignParentStart="true"
    android:layout_alignParentTop="true"
    android:background="@drawable/list_item">
    <!-- Ellipse 1 -->
    <View
        android:id="@+id/ellipse_1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="16dp"
        android:layout_marginTop="14.5dp"
        android:layout_marginEnd="304dp"
        android:layout_marginBottom="14.5dp"
        android:background="@drawable/ellipse_1"


        />


    <!-- Monday 25 May 2022 -->
    <TextView
        android:id="@+id/text_date_lot"
        android:layout_width="272dp"
        android:layout_height="23dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="34dp"
        android:gravity="center_vertical"

        android:lineSpacingExtra="4sp"
        android:text="@string/monday_25_m"
        android:textAppearance="@style/monday_25_m"


        />

    <!-- 08:30 PM -->
    <TextView
        android:id="@+id/text_hour_lot"
        android:layout_width="272dp"
        android:layout_height="20dp"
        android:layout_alignParentTop="true"
        android:layout_marginStart="72dp"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="12dp"
        android:gravity="center_vertical"
        android:lineSpacingExtra="3sp"
        android:text="@string/pm"
        android:textAppearance="@style/pm" />

<!--    number id-->


    <!-- 1 -->
    <TextView
        android:id="@+id/text_id_lot"
        android:layout_width="11dp"
        android:layout_height="31dp"
        android:layout_alignParentTop="true"

        android:layout_marginStart="30dp"

        android:layout_marginTop="18dp"
        android:layout_marginBottom="20dp"

        android:gravity="center_horizontal|center_vertical"
        android:lineSpacingExtra="4sp"
        android:textAppearance="@style/some_id"
        tools:text="1" />



</RelativeLayout>