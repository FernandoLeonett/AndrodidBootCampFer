<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <!-- Rectangle top -->
    <View
        android:id="@+id/text_rectangle_listLot_top"
        android:layout_width="0dp"
        android:layout_height="83dp"
        android:background="@drawable/text_header_lot"
        app:layout_constraintBottom_toTopOf="@id/recycler_id_list"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--progress bar-->
    <ProgressBar
        android:id="@+id/pBar_lot"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp"
        android:max="100"
        android:progress="60"
        android:scaleY="3"
        app:layout_constraintBottom_toBottomOf="@+id/text_rectangle_listLot_top"
        app:layout_constraintEnd_toEndOf="@id/text_rectangle_listLot_top"
        app:layout_constraintStart_toStartOf="@id/text_rectangle_listLot_top"
        app:layout_constraintTop_toBottomOf="@id/text_rectangle_listLot_top"
        app:layout_constraintTop_toTopOf="@id/text_rectangle_listLot_top" />


    <!-- busy -->
    <TextView
        android:id="@+id/busy"

        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="30dp"

        android:text="@string/busy"
        android:textAppearance="@style/busy"
        app:layout_constraintBottom_toBottomOf="@id/text_rectangle_listLot_top"
        app:layout_constraintStart_toStartOf="@id/text_rectangle_listLot_top"

        />
    <!-- free -->
    <TextView
        android:id="@+id/free"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="@string/free"
        android:textAppearance="@style/free"
        app:layout_constraintBottom_toBottomOf="@id/text_rectangle_listLot_top"
        app:layout_constraintEnd_toEndOf="@id/text_rectangle_listLot_top"
android:layout_marginEnd="30dp"
        />


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recycler_id_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"

        app:layout_constraintTop_toBottomOf="@id/text_rectangle_listLot_top" />


</androidx.constraintlayout.widget.ConstraintLayout>